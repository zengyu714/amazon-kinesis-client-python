<configuration>

    <appender name="MAIN" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_BASE_NAME:-logs/UnknownApp}.log</file>
        <!--<file>logs/Consumer.log</file>-->
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--daily rollover -->
            <fileNamePattern>${LOG_BASE_NAME:-logs/UnknownApp}.%d{yyyy-MM-dd-HH}.log</fileNamePattern>
            <!--<fileNamePattern>log/Consumer.%d{yyyy-MM-dd-HH}.log</fileNamePattern>-->

            <!--keep 15 days' worth of history capped at 16GB total size -->
            <maxHistory>15</maxHistory>
            <totalSizeCap>16GB</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>

        </rollingPolicy>

        <encoder>
            <pattern>%d [%thread] %-5level %logger{36} [%mdc{ShardId:-NONE}] - %msg %n</pattern>
        </encoder>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%thread] %-5level %logger{36} [%mdc{ShardId:-NONE}] - %msg %n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="${LOGGER:-MAIN}" />
        <appender-ref ref="CONSOLE" />
    </root>
    <logger name="org.apache.http" level="INFO" />
    <logger name="com.amazonaws.auth" level="INFO" />
    <logger name="com.amazonaws.request" level="INFO" />
    <logger name="software.amazon.awssdk" level="INFO" />
    <logger name="software.amazon.kinesis.common.DiagnosticUtils" level="WARN" />
    <logger name="software.amazon.kinesis.common.StreamARNUtil" level="DEBUG" />
    <logger name="software.amazon.kinesis.retrieval" level="DEBUG" />
    <logger name="software.amazon.kinesis.lifecycle" level="DEBUG" />
    <logger name="software.amazon.kinesis.retrieval.fanout" level="DEBUG" />
<!--    <logger name="software.amazon.kinesis.lifecycle.InitializeTask" level="INFO" />-->
<!--    <logger name="software.amazon.kinesis.retrieval.polling.PrefetchRecordsPublisher" level="INFO" />-->
<!--    <logger name="software.amazon.kinesis.retrieval.fanout" level="INFO" />-->
    <logger name="software.amazon.kinesis.metrics.CloudWatchMetricsPublisher" level="ERROR" />
    <logger name="com.amazonaws.http.apache.utils.ApacheUtils" level="ERROR" />
    <logger name="io.netty.handler.codec.http2" level="INFO" /> <!-- Switch to DEBUG for H2 frame logging -->
</configuration>
